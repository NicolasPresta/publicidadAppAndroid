<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:elevation="5dp"
    android:layout_marginBottom="@dimen/margen_entre_publicidades"
    android:layout_margin="@dimen/publicidad_card_margin">


    <ImageView
        android:id="@+id/img_publicidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:transitionName="shareImg"
        android:background="@color/primary_light"/>

    <TextView
        android:id="@+id/txt_vigencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_gravity="right"
        android:text="Hasta el 21/04"
        android:background="@drawable/vigencia_background"
        android:textColor="@color/primary_text_ligth"
        android:textSize="22sp" />

</android.support.v7.widget.CardView>