<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="210dp"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:elevation="5dp"
    android:layout_marginBottom="@dimen/margen_entre_publicidades"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_publicidad_img_height"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/txt_nombre"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Zapatilla"
        android:background="@color/categoria_background"
        android:textColor="@color/primary_text_ligth"
        android:textSize="30sp"
        android:textStyle="bold"/>

</android.support.v7.widget.CardView>