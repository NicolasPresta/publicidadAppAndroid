<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="210dp"
    android:layout_height="210dp"
    android:id="@+id/categoria_card"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:elevation="15dp"
    android:layout_marginBottom="@dimen/margen_entre_publicidades"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="105dp"
    card_view:cardPreventCornerOverlap="false">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:transitionName="shareCatImg"/>

    <TextView
        android:id="@+id/txt_nombre"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Zapatilla"
        android:background="@drawable/circle_background"
        android:textColor="@color/primary_text_ligth"
        android:textSize="30sp"
        android:textStyle="bold"
        android:transitionName="shareCatTxt"/>

</android.support.v7.widget.CardView>